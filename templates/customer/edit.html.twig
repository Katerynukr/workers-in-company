{% extends 'base.html.twig' %}

{% block title %}Modify Customer Data
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div>
					<div>
						<h1>Modify Customer Data</h1>
					</div>

					<div>
                        <form action="{{path('customer_update', {id: customer.id})}}" method="POST">
							<div class="form-group">
								<label>Name:</label>
								<input type="text" class="form-control" name="customer_name" value="{{customer.name}}">
								<small class="form-text text-muted">Customer name.</small>
							</div>
                            <div class="form-group">
								<label>Surname:</label>
								<input type="text" class="form-control" name="customer_surname" value="{{customer.surname}}">
								<small class="form-text text-muted">Customer surname.</small>
							</div>
                            <div class="form-group">
								<label>Phone:</label>
								<input type="text" class="form-control" name="customer_phone" value="{{customer.phone}}">
								<small class="form-text text-muted">Customer phone number.</small>
							</div>
							<div class="form-group">
								<label>Email:</label>
								<input type="text" class="form-control" name="customer_email" value="{{customer.email}}">
								<small class="form-text text-muted">Customer email address.</small>
							</div>
                            <div class="form-group">
								<label>Comment:</label>
                                <textarea name="customer_comment" id="summernote">{{customer.comment|raw}}</textarea>
							</div>
                            <div class="form-group">
								<label>Company:</label>
                                <select name="customer_company_id" class="form-control">
									<option value="0">Select company</option>
									{% for company in companies %}
										<option value="{{company.id}}" {% if company.id == customer.companyId %}selected{% endif %}>UAB " {{company.uab}} "</option>
									{% endfor %}
								</select>
								<small class="form-text text-muted">Available companies.</small>
							</div>
							<input type="hidden" name="token" value="{{ csrf_token('check_csrf_hidden') }}"/>
							<button type="submit" class="btn btn-dark btn-add save-btn btn-block">Edit Customer</button>
						</form>
						
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}